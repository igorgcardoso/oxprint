# OxPrint Environment Variables
# Copy this file to .env and fill in the values
# NEVER commit the actual .env file to version control

# JWT Secret - REQUIRED
# Generate a secure random string: openssl rand -hex 32
JWT_SECRET=your-super-secret-jwt-key-change-this

# Database URL - Optional (defaults to sqlite:data/oxprint.db)
DATABASE_URL=sqlite:data/oxprint.db

# Database Connection Pool - Optional
DATABASE_MAX_CONNECTIONS=5

# Server Configuration - Optional (can also use config/default.toml)
OXPRINT_SERVER__HOST=127.0.0.1
OXPRINT_SERVER__PORT=3000
